using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class UISlot : MonoBehaviour
{
    public Image icon;
    public Text name;
    public Text desc;

    public void SetItem(Sprite sprite,string _name,string _desc)
    {
        icon.sprite = sprite;
        name.text = _name;
        desc.text = _desc;
    }
}
